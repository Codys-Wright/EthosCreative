 				req.once("error", abort);
-				req.once("end", abort);
+				// FIX: The original code used req.once("end", abort) which fires when the request
+				// body is fully received - a normal event that shouldn't trigger abort. Instead,
+				// we listen on the response object's "close" event which fires when the connection
+				// closes. The writableEnded check ensures we only abort if the response wasn't
+				// fully sent (i.e., client disconnected before we finished responding).
+				const res = this.runtime?.node?.res;
+				if (res) {
+					res.on("close", () => {
+						if (!res.writableEnded && !this.#abortController?.signal.aborted) {
+							abort();
+						}
+					});
+				}
 			}
 			return this.#abortController;
