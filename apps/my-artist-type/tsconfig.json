{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": "../my-artist-type",
    "paths": {
      "@/*": ["../my-artist-type/src/*"]
    }
  },
  "include": [
    "../my-artist-type/**/*.cjs",
    "../my-artist-type/**/*.js",
    "../my-artist-type/**/*.ts",
    "../my-artist-type/**/*.tsx",
    "../my-artist-type/.eslintrc.cjs",
    "../my-artist-type/.next/types/**/*.ts",
    "../my-artist-type/next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["../my-artist-type/node_modules"]
}
