  {
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": "../quiz",
    "paths": {
      "@/*": ["../quiz/src/*"]
    }
  },
  "include": [
    "../quiz/**/*.cjs",
    "../quiz/**/*.js",
    "../quiz/**/*.ts",
    "../quiz/**/*.tsx",
    "../quiz/.eslintrc.cjs",
    "../quiz/.next/types/**/*.ts",
    "../quiz/next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["../quiz/node_modules"]
}
