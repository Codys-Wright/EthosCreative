{
  "name": "ethos-creative",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "studio": "pnpm --filter @repo/database db:studio",
    "migrate": "pnpm --filter @repo/database db:migrate",
    "seed": "pnpm --filter @repo/database db:seed",
    "generate": "pnpm --filter @repo/database db:generate",
    "push": "pnpm --filter @repo/database db:push",
    "db/refresh": "pnpm generate && pnpm push && pnpm studio"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
